<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/nomeGrupo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:enabled="false"
                android:gravity="center"
                android:hint="Nome do Grupo"
                android:inputType="text"
                android:textColorHint="#7000" />

            <EditText
                android:id="@+id/remetenteConvite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#FFF"
                android:enabled="false"
                android:gravity="center"
                android:hint="Remetente"
                android:inputType="textEmailAddress"
                android:textAllCaps="true"
                android:textColorHint="#7000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/aceitarButton"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#3aaf4b"
                    android:gravity="center"
                    android:text="ACEITAR"
                    android:layout_marginRight="25dp"
                    android:textColor="#FFF"
                    android:textColorHint="#7000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/recusarButton"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="#ff0909"
                    android:gravity="center"
                    android:text="RECUSAR"
                    android:textColor="#FFF"
                    android:textColorHint="#7000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>