<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    android:background="#EEE"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="CONTA"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#FFF"
                android:enabled="false"
                android:gravity="center"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColorHint="#7000" />

            <EditText
                android:id="@+id/senhaInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#FFF"
                android:gravity="center"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColorHint="#7000" />

            <Spinner
                android:id="@+id/instituicaoInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#FFF"
                android:gravity="center" />

            <EditText
                android:id="@+id/nomeInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:gravity="center"
                android:hint="Nome Completo"
                android:inputType="text"
                android:textColorHint="#7000" />

            <EditText
                android:id="@+id/matriculaInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:gravity="center"
                android:hint="MatrÃ­cula"
                android:inputType="text"
                android:textColorHint="#7000" />

            <CheckBox
                android:id="@+id/souProfessorCb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:text="SOU UM PROFESSOR" />

            <Button
                android:id="@+id/salvarButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#3aaf4b"
                android:gravity="center"
                android:text="SALVAR"
                android:textColor="#FFF"
                android:textColorHint="#7000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/deletarButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#af3c3a"
                android:gravity="center"
                android:text="DELETAR"
                android:textColor="#FFF"
                android:textColorHint="#7000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>